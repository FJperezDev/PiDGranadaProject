{
  "expo": {
    "name": "frontendStudent",
    "slug": "frontendStudent",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/studentIcon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/studentIcon.png",
        "backgroundColor": "#003594"
      },
      "package": "com.fran1763.frontendStudent",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "./plugins/withAndroidQueries",  
      "./plugins/withManifestFix",     
      "./plugins/withDependencyFix",
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Permite el acceso al micr√≥fono para los comandos de voz.",
          "speechRecognitionPermission": "Permite el reconocimiento de voz para interactuar con la app."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "useAndroidX": true,
            "enableJetifier": true,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "kotlinVersion": "2.0.21"
          }
        }
      ]
    ]
  }
}